<div>
  <%= flash[:notice] %>
</div>


<% @bookmarks.each do |bookmark| %>
  <a href="<%= bookmark.url %>">
    <%= bookmark.name %>
  </a>

  <form action = '/bookmarks/<%= bookmark.id %>/edit'>
    <input type='submit' id='Edit_<%= bookmark.id %>' value='Edit'>
  </form>

  <form action = '/bookmarks/<%= bookmark.id %>' method = 'post'>
    <input id='hidden' type='hidden' name='_method' value='delete'>
    <input type='submit' id='Delete_<%= bookmark.id %>' value='Delete'>
  </form>

  <form action = '/bookmarks/<%= bookmark.id %>/comments/new'>
    <input type='submit' id='Comment_<%= bookmark.id %>' value='Comment'>
  </form>

  <% bookmark.comments.each do |comment| %>
    <h5><%= comment.text %></h5>
  <% end %>

<% end %>

<br>
<br>

<form action = '/bookmarks/new'>
  <input type = 'submit' value = 'Add Bookmark'>
</form>
